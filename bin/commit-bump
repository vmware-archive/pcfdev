#!/bin/bash

micropcf_dir=$(cd `dirname $0` && cd .. && pwd)

function submodule_log() {
  echo -n "bump "
  for submodule in $(git diff --cached --submodule | grep '^Submodule' | awk '{print $2}'); do
    echo -n "$(basename $submodule) "
  done

  echo
  echo

  if [ "$#" != "0" ]; then
    for id in "$@"; do
      echo "[finishes #${id}]"
    done
    echo
  fi

  git submodule status | awk '{print $2}' | xargs git diff --cached --submodule
}

pushd $micropcf_dir >/dev/null
  submodule_log | git duet-commit --file -
popd >/dev/null
